{% render 'shogun-content-handler' %}
<!doctype html>
<html lang="{{ request.locale.iso_code }}" dir="ltr"
      class="{% if settings.animations_on_scroll %}scroll-on-animations{% endif %}"
      {% if settings.browser_tab_enable %}data-inactive-tab-text="{{ settings.browser_tab_text }}"{% endif %}>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.color_primary }}">
  <meta name="language" content="{{ request.locale.iso_code }}">
  {% if template.name == '404' %}<meta name="robots" content="noindex, nofollow">{% endif %}

  <link rel="canonical" href="{{ canonical_url }}">

  {%- comment -%} Preconnects (uniques) {%- endcomment -%}
  <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  {%- comment -%} Preload de l'image héro si connue (LCP) {%- endcomment -%}
  <link rel="preload" as="image"
        href="{{ 'TB_TOUCAN_VERDURE2_1200x800_DESKTOP_-_MODIFIED_30887a17-85b3-4aad-8599-f5b54c0a3583.png' | asset_url }}"
        fetchpriority="high">

  {%- for language in localization.available_languages -%}
    <link rel="alternate" hreflang="{{ language.iso_code }}" href="{{ language.url | default: language.root_url | default: '/' }}">
  {%- endfor -%}
  <link rel="alternate" hreflang="x-default" href="{{ shop.url }}{{ request.path }}">

  {% unless settings.favicon == blank %}
    <link rel="icon" type="image/png" sizes="16x16" href="{{ settings.favicon | image_url: width: 16, height: 16, crop: 'center' }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ settings.favicon | image_url: width: 32, height: 32, crop: 'center' }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ settings.favicon | image_url: width: 180, height: 180, crop: 'center' }}">
  {% endunless %}

  <title>
    {{ page_title }}{% if current_tags %} – tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} – Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} – {{ shop.name }}{% endunless %}
  </title>
  {% if page_description %}<meta name="description" content="{{ page_description | escape }}">{% endif %}

  {% render 'seo-meta-tags' %}
  {% render 'structured-data' %}
  {{ content_for_header }}

  {% style %}{{ settings.code_css }}{% endstyle %}

  {# --- CSS --- #}
  <link href="{{ 'vendor-bootstrap.min.css' | asset_url }}" rel="stylesheet">
  <link href="{{ 'vendor-splide.min.css' | asset_url }}" rel="stylesheet">
  <link href="{{ 'vendor-animate.min.css' | asset_url }}" rel="stylesheet">
  <link href="{{ 'variables.css' | asset_url }}" rel="stylesheet">
  <link href="{{ 'base.css' | asset_url }}" rel="stylesheet">
  <link href="{{ 'general.css' | asset_url }}" rel="stylesheet">
  <link href="{{ 'sections.css' | asset_url }}" rel="stylesheet">
  <link href="{{ 'collection.css' | asset_url }}" rel="stylesheet">
  <link href="{{ 'product.css' | asset_url }}" rel="stylesheet">
  <link href="{{ 'cart.css' | asset_url }}" rel="stylesheet">
  <link href="{{ 'custom-style.css' | asset_url }}" rel="stylesheet">

  {% if request.page_type == 'collection' %}
    <link href="{{ 'vendor-nouislider.min.css' | asset_url }}" rel="stylesheet">
    <script src="{{ 'vendor-nouislider.min.js' | asset_url }}" defer></script>
  {% endif %}

  {% if request.page_type == 'product' %}
    <link href="{{ 'vendor-glightbox.min.css' | asset_url }}" rel="stylesheet">
    <script src="{{ 'vendor-glightbox.min.js' | asset_url }}" defer></script>
  {% endif %}

  {%- comment -%}
    Lazy-load ciblé : on NE touche PAS aux éléments marqués data-lcp ou .no-lazy
  {%- endcomment -%}
  <script defer>
    document.addEventListener("DOMContentLoaded", function () {
      document.querySelectorAll("img:not([loading]):not([data-lcp]):not(.no-lazy)").forEach(img => {
        img.setAttribute("loading", "lazy");
        img.setAttribute("decoding", "async");
      });
    });
  </script>

  {% if request.design_mode %}
    <!-- Sentry Monitoring désactivé en production -->
    <script src="https://browser.sentry-cdn.com/7.92.0/bundle.tracing.min.js" crossorigin="anonymous"></script>
    <script>
      Sentry.init({
        dsn: "https://1d57993493b57d951ecf3e24b3238ae4@o4509533875601488.ingest.sentry.io/4509533875601488",
        integrations: [new Sentry.BrowserTracing()],
        tracesSampleRate: 1.0,
      });
      Sentry.captureException(new Error("Test Sentry"));
    </script>
  {% endif %}

  {{ settings.code_javascript }}
  {{ settings.code_head }}
  {% render 'shogun-head' %}

  {%- comment -%} Utilitaires A11y & FOUT {%- endcomment -%}
  <style>
    .visually-hidden{position:absolute!important;clip:rect(1px,1px,1px,1px);padding:0;border:0;height:1px;width:1px;overflow:hidden;white-space:nowrap}
    a:focus,button:focus,[role="button"]:focus{outline:2px solid #0a7;outline-offset:2px}
    /* Police : limiter FOUT quand possible (si @font-face custom est injecté via CSS) */
    @font-face{font-display:swap;}
  </style>
</head>

<body class="{{ request.page_type | prepend: 'page-type-' }}">
  <a class="visually-hidden" href="#main">{{ 'general.accessibility.skip_content' | t }}</a>

  {%- comment -%} HEADER + NAV {%- endcomment -%}
  <header role="banner">
    {% section 'announcement-bar' %}
    <div class="top-social-bar" role="complementary" aria-label="Social bar">
      <div class="social-icons-left">{% render 'social-icons-no-flags' %}</div>
      <div class="language-selector-right" aria-label="Language selector">
        <a href="/fr"><img src="{{ 'flag-fr.png' | asset_url }}" class="flag-icon" alt="Français"></a>
        <a href="/"><img src="{{ 'flag-en.png' | asset_url }}" class="flag-icon" alt="English"></a>
        <a href="/de"><img src="{{ 'flag-de.png' | asset_url }}" class="flag-icon" alt="Deutsch"></a>
      </div>
    </div>
    {% section 'discount-bar' %}
    <nav role="navigation" aria-label="Primary">
      {% section 'navbar' %}
    </nav>
    {% section 'stories-bar-sticky-dynamic' %}
    <div class="announcement-text shipping-notice">
      {% assign lang = request.locale.iso_code %}
      <a href="{% if lang == 'fr' %}/fr/pages/eee{% elsif lang == 'de' %}/de/pages/eee{% else %}/pages/eee{% endif %}">{{ 'announcement.shipping_notice' | t }}</a>
    </div>
  </header>

  {%- comment -%} MAIN (H1 caché si home) {%- endcomment -%}
  <main id="main" role="main"{% if template.name == 'index' %} class="homepage-main"{% endif %}>
    {% if template.name == 'index' %}
      <h1 class="visually-hidden">{{ shop.name | escape }}</h1>
    {% endif %}
    {{ content_for_layout }}
  </main>

  {%- comment -%} FOOTER {%- endcomment -%}
  <footer role="contentinfo">
    {% sections 'footer-group' %}
  </footer>

  {% render 'offcanvas-cart' %}
  {% render 'offcanvas-search' %}
  {% render 'offcanvas-wishlist' %}
  {% render 'back-to-top' %}

  <!-- JS en fin de page -->
  <script>window.shopMoneyFormat = {{ shop.money_format | json }};</script>
  <script src="{{ 'shopify_common.js' | shopify_asset_url }}" defer></script>
  <script src="{{ 'vendor-bootstrap.bundle.min.js' | asset_url }}" defer></script>
  <script src="{{ 'vendor-splide.min.js' | asset_url }}" defer></script>
  <script src="{{ 'base.js' | asset_url }}" defer></script>
  <script src="{{ 'general.js' | asset_url }}" defer></script>
  <script src="{{ 'search.js' | asset_url }}" async></script>
  <script src="{{ 'sections.js' | asset_url }}" async></script>
  <script src="{{ 'collection.js' | asset_url }}" async></script>
  <script src="{{ 'product.js' | asset_url }}" async></script>
  <script src="{{ 'cart.js' | asset_url }}" async></script>
  <script src="{{ 'custom.js' | asset_url }}" async></script>
  <script src="{{ 'wishlist.js' | asset_url }}" defer></script>
  <script src="{{ 'stories-tooltips.js' | asset_url }}" defer></script>

  {% if settings.wishlist_enable %}
    <div class="mobile-wishlist-fixed d-md-none">
      <button class="wishlist-icon nav-link btn btn-link p-0 position-relative"
              type="button"
              aria-label="{{ 'general.accessibility.wishlist' | t }}"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvas-wishlist"
              role="button">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2"
             stroke-linecap="round" stroke-linejoin="round" class="feather feather-heart">
          <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
        </svg>
        <span class="wishlist-count-badge badge d-inline-block" aria-live="polite" aria-atomic="true" hidden></span>
      </button>
    </div>
  {% endif %}
</body>
</html>