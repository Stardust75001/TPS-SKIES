<div class="top-social-bar" role="navigation" aria-label="Social & language">
  <div class="social-icons-left">
    <a href="https://www.instagram.com/spencerandthecity/" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
      <img src="{{ 'instagram.png' | asset_url }}" alt="Instagram" class="social-img-icon" width="40" height="40">
    </a>
    <a href="https://www.facebook.com/profile.php?id=61573834333893" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
      <img src="{{ 'facebook.png' | asset_url }}" alt="Facebook" class="social-img-icon" width="40" height="40">
    </a>
    <a href="https://www.tiktok.com/@thepetsociety_paris" target="_blank" rel="noopener noreferrer" aria-label="TikTok">
      <img src="{{ 'tiktok.png' | asset_url }}" alt="TikTok" class="social-img-icon" width="40" height="40">
    </a>
    <a href="https://wa.me/33769238799" target="_blank" rel="noopener noreferrer" aria-label="WhatsApp">
      <img src="{{ 'WhatsApp.png' | asset_url }}" alt="WhatsApp" class="social-img-icon" width="40" height="40">
    </a>
    <a href="mailto:hello@thepetsociety.paris" aria-label="Email">
      <img src="{{ 'mail.png' | asset_url }}" alt="Email" class="social-img-icon" width="40" height="40">
    </a>
  </div>

  <div class="language-selector-right">
    {% for language in localization.available_languages %}
      {% assign flag_name = language.iso_code | downcase | prepend: 'flag-' | append: '.png' %}
      <a
        href="{% if language.iso_code == 'en' %}/{% else %}{{ language.root_url }}{% endif %}"
        hreflang="{{ language.iso_code }}"
        aria-label="{{ language.endonym_name | default: language.name }}">
        <img src="{{ flag_name | asset_url }}" alt="{{ language.endonym_name | default: language.name }}"
             class="flag-icon" width="32" height="24">
      </a>
    {% endfor %}
  </div>
</div>