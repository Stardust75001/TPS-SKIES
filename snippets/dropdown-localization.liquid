{% if localization.available_languages.size > 1 %}
  <div class="language-selector btn-group dropup mx-2"
       style="z-index: {{ settings.currency_selector_z_index }}">
    <button
        class="btn btn-sm px-4 d-flex align-items-center dropdown-toggle {{ btn_color | default: 'btn-outline-primary' }}" 
        data-bs-toggle="dropdown"
        aria-expanded="false">
      {% assign flag_name = localization.language.iso_code | downcase | prepend: 'flag-' | append: '.svg' %}
      <img
          class="img-fluid me-3"
          src="{{ flag_name | file_url }}"
          alt=""
          width="18"
          height="18"
          loading="lazy">
      <span class="small">
          {{ localization.language.name }}
      </span>
    </button>
    <ul class="dropdown-menu shadow">
      {% for language in localization.available_languages %}
        {% assign target_url = language.url | default: language.root_url | default: '/' %}
        <li>
          <a 
            class="dropdown-item d-flex {% if language.iso_code == localization.language.iso_code %}active disabled{% endif %}"
            {% if language.iso_code == localization.language.iso_code %}
              href="#"
              aria-disabled="true"
              tabindex="-1"
            {% else %}
              href="{{ target_url }}"
            {% endif %}
            hreflang="{{ language.iso_code }}"
            {% if language.iso_code == localization.language.iso_code %}aria-current="page"{% endif %}>
            {% assign flag_name = language.iso_code | downcase | prepend: 'flag-' | append: '.svg' %}
            <img
                class="img-fluid me-4"
                src="{{ flag_name | file_url }}"
                alt="{{ language.endonym_name | default: language.name }}"
                width="20"
                height="20"
                loading="lazy">
            <span>{{ language.endonym_name | default: language.name }}</span>
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endif %}